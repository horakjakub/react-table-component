{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "indent": ["warn", 4, { "SwitchCase": 1 }],
    "no-unused-vars": "warn",
    "no-debugger": "warn",
    "no-console": "warn",
    "quotes": ["warn", "single"]
  },
  "overrides": [
    {
      "files": [ "*.test.js" ],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off"
      }
    }
  ]
}